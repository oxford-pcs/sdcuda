<?xml version="1.0" encoding="utf-8"?>
<root>
  <host>
    <param value="4" name="nCPUCORES" description="number of CPU cores"/>
  </host>
  <device>
    <param value="32" name="nCUDABLOCKS" description="number of CUDA blocks"/>
    <param value="256" name="nCUDATHREADSPERBLOCK" description="number of threads per CUDA block"/>
  </device>
  <process>
    <param value="2.45" name="RESCALE_WAVELENGTH" description="wavelength to rescale to (micron)"/>
  </process>
  <stages>
    <stage>MAKE_DATACUBE_ON_HOST</stage>
    <stage>H_CROP_TO_EVEN_SQUARE</stage>
    <stage>COPY_HOST_DATACUBE_TO_DEVICE</stage>
    <stage>D_FFT</stage>
    <stage>D_FFTSHIFT</stage>
    <stage>D_RESCALE</stage>
    <stage>D_IRESCALE</stage>
    <stage>D_IFFTSHIFT</stage>
    <stage>D_IFFT</stage>
    <stage>D_SET_DATA_TO_AMPLITUDE</stage>
    <stage>D_CROP_TO_SMALLEST_DIMENSION</stage>
    <stage>COPY_DEVICE_DATACUBE_TO_HOST</stage>
  </stages>
</root>
